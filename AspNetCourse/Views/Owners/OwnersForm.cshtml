@model AspNetCourse.Core.Domain.Owner

@{
    ViewBag.Title = "OwnersForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string buttonLabel = Model == null ? "Create" : "Update";
}
<div class="d-flex justify-content-center align-items-center container ">

    <div class="row ">

        @using (Html.BeginForm("Update", "Owners"))
        {
            @Html.HiddenFor(o => o.OwnerId);
            <div class="form-group">
                @Html.LabelFor(o => o.Name)
                @Html.TextBoxFor(o => o.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(o => o.Surname)
                @Html.TextBoxFor(o => o.Surname, new { @class = "form-control" })
            </div>
            <div class="form-group ju">
                @Html.LabelFor(o => o.Birthday)
                @Html.TextBoxFor(o => o.Birthday, new { @class = "form-control" })
            </div>
            <button type="submit">@buttonLabel</button>
        }
    </div>
</div>