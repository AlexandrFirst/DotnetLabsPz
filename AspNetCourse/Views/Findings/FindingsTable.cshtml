@model System.Collections.Generic.IEnumerable<AspNetCourse.Core.Domain.Finding>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Finding Identifier</th>
            <th scope="col">Name</th>
            <th scope="col">Dectiption</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var finding in Model)
        {
        <tr>
            <th scope="row">@finding.FindingId</th>
            <td>@finding.Name</td>
            <td>@finding.Description</td>
            <td>@Html.ActionLink("Edit", "Edit", "Findings", new { id = finding.FindingId }, null)</td>
            <td>@Html.ActionLink("Delete", "Delete", "Findings", new { id = finding.FindingId }, new { @class = "delete", @id = finding.FindingId })</td>
        </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add new Finding", "Edit", "Findings")

