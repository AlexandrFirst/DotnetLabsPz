@model System.Collections.Generic.IEnumerable<AspNetCourse.Core.Domain.Worker>




<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Woker identifier</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Date Of Birth</th>
        </tr>
    </thead>
    <tbody>
       @foreach(var worker in Model) { 
            <tr>
                <th scope="row">@worker.WorkerId</th>
                <td>@worker.Name</td>
                <td>@worker.Surname</td>
                <td>@worker.Birthday</td>
                <td>@Html.ActionLink("Edit", "Edit", "Workers", new {id = worker.WorkerId}, null)</td>
                <td>
                    @Html.ActionLink("Delete", "Delete","Workers", new { id = worker.WorkerId }, new { @class="delete", @id=worker.WorkerId })
                </td>
            </tr>
       }
    </tbody>
</table>
@Html.ActionLink("Create new Worker", "Edit", "Workers")
