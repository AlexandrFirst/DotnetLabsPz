@model Lab3_Dot_Net.Core.DTO.FindingFormDTO

@{
    ViewBag.Title = "FindingForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-4 container">
    <h2>Login</h2>
    @using (Html.BeginForm("Update", "Findings"))
    {
        @Html.HiddenFor(f => f.FindingId);
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row mb-2">
            <div class="col-md-6">
                @Html.LabelFor(f => f.FindingName)
                @Html.TextBoxFor(f => f.FindingName, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(f => f.FindingName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-lg-6">
                @Html.LabelFor(f => f.Description)
                @Html.TextAreaFor(f => f.Description, new { @class = "form-control", placeholder = "Surname" })
                @Html.ValidationMessageFor(f => f.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    }
</div>





