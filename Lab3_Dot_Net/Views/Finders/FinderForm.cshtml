@model Lab3_Dot_Net.Core.DTO.FinderFormDTO

@{
    ViewBag.Title = "FinderForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-4 container">
    <h2>Login</h2>
    @using (Html.BeginForm("Update", "Finders"))
    {
        @Html.HiddenFor(f => f.FinderId);
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row mb-2">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Surname)
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Surname" })
                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Birthday)
                @Html.TextBoxFor(m => m.Birthday, new { @class = "form-control", placeholder = "Surname" })
                @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    }
</div>



