@using System.Web;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="nav justify-content-center">
        <a href="Workers" class="nav-item nav-link active">Workers</a>
        <a href="Finders" class="nav-item nav-link">Finders</a>
        <a href="Findings" class="nav-item nav-link">Findings</a>
        <a href="Obtainings" class="nav-item nav-link">Obtainings</a>
        <a href="Owners" class="nav-item nav-link">Owners</a>
        <a href="Extradictions" class="nav-item nav-link">Extradictions</a>
        <div class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Statistics</a>
            <div class="dropdown-menu">
                <a href="Statistics/GetTopLosers" class="dropdown-item">Top owners who have lost their items</a>
                <a href="Statistics/GetOperationsMadeByWorkers" class="dropdown-item">Workers and their performed actions</a>
            </div>
        </div>
    </nav>
    <hr/>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Lab made by Oleksii Selevych and Oleksandr Logvinov</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div id="modalWindow" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle"></h5>
                </div>
                <div class="modal-body">
                    <p id="modalMainText"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="closeModal()" aria-label="Close">Close</button>
                    <a href="#" id="getQueryBtn" class="btn btn-primary bg-danger" role="button" aria-pressed="true">Delete</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/JS/Modal.js"></script>
</body>
</html>
